<project name="picoded servlet commons" default="source">
	<property name="ant.build.javac.source" value="1.5"/>
	<property name="ant.build.javac.target" value="1.5"/>
	
	<property name='lib.dir' value='./lib' />
	
	<!--
	<presetdef name="javac">
    	<javac includeantruntime="false" />
  	</presetdef>
  	-->
	
	<taskdef name="junit" classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
		<classpath>
			<pathelement path="bin" />
			<fileset dir="./lib" includes="**/*.jar" />
		</classpath>
  	</taskdef>
  	
	<!-- - - - - - - - - - - - - - - - - -
	 target: clean
	 - - - - - - - - - - - - - - - - - -->
	<target name="clean">
		<delete dir="bin" failonerror="false"/>
		<delete dir="test-reports" failonerror="false"/>
		<delete dir="html-docs" failonerror="false"/>
		
		<mkdir dir="bin"/>
		
		<!--
		<mkdir dir="test-reports"/>
		<mkdir dir="html-docs"/>
		-->
	</target>
	
	<!-- - - - - - - - - - - - - - - - - -
	 target: build
	 - - - - - - - - - - - - - - - - - -->
	<target name="build">
		<mkdir dir="bin/build"/>
		<mkdir dir="bin/classes"/>
		<path id="lib.path.ref">
			<fileset dir="./lib" includes="**/*.jar" />
		</path>
		<javac destdir="bin/classes" classpathref="lib.path.ref" debug="true" debuglevel="lines,source" 
				 includeantruntime="false" bootclasspath="./rt-stubs/java-rt-jar-stubs-1.5.0.jar">
			<compilerarg value="-Xlint:all"/>
			<src path="src/picoded"/>
		</javac>
		<jar destfile="bin/build/picodedJavaCommons.jar"
			  basedir="./">
			<fileset dir="./bin/classes" includes="**/*.class" />
			<fileset dir="./lib" includes="**/*.jar" />
		</jar>
	</target>
	
	<!-- - - - - - - - - - - - - - - - - -
	 target: source
	 - - - - - - - - - - - - - - - - - -->
	<target name="source">
		<mkdir dir="bin/classes"/>
		<path id="lib.path.ref">
			<fileset dir="./lib" includes="**/*.jar" />
		</path>
		<javac destdir="bin/classes" classpathref="lib.path.ref" debug="true" debuglevel="lines,source" 
				 includeantruntime="false" bootclasspath="./rt-stubs/java-rt-jar-stubs-1.5.0.jar">
			<compilerarg value="-Xlint:all"/>
			<src path="src/picoded"/>
		</javac>
	</target>
	
	<!-- - - - - - - - - - - - - - - - - -
	 target: picodedX
	 - - - - - - - - - - - - - - - - - -->
	<target name="picodedX">
		<mkdir dir="bin/classes"/>
		<path id="lib.path.ref">
			<fileset dir="./lib" includes="**/*.jar" />
		</path>
		<javac destdir="bin/classes" classpathref="lib.path.ref" debug="true" debuglevel="lines,source" 
				 includeantruntime="false" bootclasspath="./rt-stubs/java-rt-jar-stubs-1.5.0.jar">
			<compilerarg value="-Xlint:unchecked"/>
			<src path="src/picodedX"/>
		</javac>
	</target>
	
	<!-- - - - - - - - - - - - - - - - - -
	 target: picodedTests
	 - - - - - - - - - - - - - - - - - -->
	<target name="picodedTests">
		<mkdir dir="bin/classes"/>
		<path id="lib.path.ref">
			<fileset dir="./lib" includes="**/*.jar" />
		</path>
		<javac destdir="bin/classes" classpathref="lib.path.ref" debug="true" debuglevel="lines,source" 
				 includeantruntime="false" bootclasspath="./rt-stubs/java-rt-jar-stubs-1.5.0.jar">
			<compilerarg value="-Xlint:all"/>
			<src path="src/picoded"/>
			<src path="src/picodedTests"/>
		</javac>
	</target>
	
	
</project>
